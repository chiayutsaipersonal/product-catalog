        html::-webkit-scrollbar {
            width: 0 !important;
        }

        html {
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            -ms-overflow-style: none;
            overflow: -moz-scrollbars-none;
        }

        body {
            margin: 0px;
        }
